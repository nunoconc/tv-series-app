{
    "name": "tv-series-app",
    "description": "Search and store your favourite TV series episodes",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.11.8",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.113",
        "@types/react": "^18.3.11",
