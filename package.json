        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "style-loader": "^4.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
